./configure --prefix=${PROJECT_PREFIX}                                              \
            --with-package-name="GStreamer Libav Plugins 1.10.2 BLFS"               \
            --with-package-origin="http://www.linuxfromscratch.org/blfs/view/svn/"  \
            --with-libav-extra-configure="--disable-yasm"                          &&
make -j 32                                                                         &&
sudo make install
