sed -i 's/static const/static/' libmpeg2/idct_mmx.c                  &&
./configure --prefix=${PROJECT_PREFIX}                                \
            --enable-shared                                           \
            --disable-static                                         &&
make -j 32                                                           &&
sudo make install                                                    &&
sudo install -v -m755 -d ${PROJECT_PREFIX}/share/doc/mpeg2dec-0.5.1  &&
sudo install -v -m644 README doc/libmpeg2.txt                         \
                    ${PROJECT_PREFIX}/share/doc/mpeg2dec-0.5.1
