./configure --prefix=${PROJECT_PREFIX}                                    \
            --disable-static                                             &&
make -j 32                                                               &&
sudo make install                                                        &&
sudo chmod   -v   755 ${PROJECT_PREFIX}/lib/lib{hogweed,nettle}.so       &&
sudo install -v -m755 -d ${PROJECT_PREFIX}/share/doc/nettle-3.3          &&
sudo install -v -m644 nettle.html ${PROJECT_PREFIX}/share/doc/nettle-3.3
